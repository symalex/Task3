<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<item android:drawable="@android:color/darker_gray" android:state_selected="true" />
	<!-- pressed -->
	<item android:drawable="@color/colorAccent" android:state_pressed="true" />
	<!-- focused -->
	<item android:drawable="@color/colorPrimary" android:state_focused="true" />
	<!-- hovered -->
	<item android:drawable="@android:color/holo_purple" android:state_hovered="true" />
	<!-- default -->
	<item android:drawable="@android:color/transparent" />

</selector>
