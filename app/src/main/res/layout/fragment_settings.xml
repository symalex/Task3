<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Translate API key" />

	<android.support.design.widget.TextInputLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<EditText
			android:id="@+id/fragment_settings_api_key"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="Yandex API key (https://tech.yandex.com/translate/)" />

	</android.support.design.widget.TextInputLayout>

	<CheckBox
		android:id="@+id/fragment_settings_autodetect"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Autodetect text language" />

	<TextView
		android:id="@+id/fragment_settings_src_lang_info"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Source text language" />

	<Spinner
		android:id="@+id/fragment_settings_src_lang"
		android:layout_width="match_parent"
		android:layout_height="wrap_content" />

	<Button
		android:id="@+id/fragment_settings_btn_swap"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:text="Exchange" />

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Result text language" />

	<Spinner
		android:id="@+id/fragment_settings_result_lang"
		android:layout_width="match_parent"
		android:layout_height="wrap_content" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:orientation="horizontal">

		<Button
			android:id="@+id/fragment_settings_btn_ok"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Save" />

		<Button
			android:id="@+id/fragment_settings_btn_cancel"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Cancel" />
	</LinearLayout>

</LinearLayout>
