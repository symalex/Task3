<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:card_view="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:layout_margin="2dp"
	>

	<android.support.v7.widget.CardView
		android:id="@+id/item_history_card_view"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:scrollbars="vertical"
		android:background="@drawable/list_item_selector"
		card_view:cardCornerRadius="12dp"
		card_view:cardBackgroundColor="@color/colorAccent"
		>

		<!--
		android:background="@drawable/list_item_selector"
		android:background="?android:attr/selectableItemBackground"
		android:background="@drawable/list_selector" -->

		<RelativeLayout
			android:id="@+id/item_history_card_view_layout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="6dp">

			<TextView
				android:id="@+id/item_history_date"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="5dp"
				android:text="01/12/2015"
				android:textSize="6sp" />

			<TextView
				android:id="@+id/item_history_time"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/item_history_date"
				android:layout_marginLeft="5dp"
				android:text="10:00"
				android:textSize="6sp" />

			<Button
				android:id="@+id/item_history_btn_favorite"
				android:layout_width="38dp"
				android:layout_height="38dp"
				android:layout_below="@id/item_history_date"
				android:layout_centerVertical="true"
				android:layout_marginLeft="6dp"
				android:layout_marginRight="10dp"
				android:background="@drawable/favorite_button"
				android:textColor="@android:color/holo_purple"
				android:textSize="13sp"
				android:textStyle="bold" />

			<TextView
				android:id="@+id/item_history_top_text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentTop="true"
				android:layout_alignTop="@id/item_history_date"
				android:layout_toRightOf="@+id/item_history_btn_favorite"
				android:textSize="16sp"
				android:textStyle="bold" />

			<TextView
				android:id="@+id/item_history_bottom_text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@+id/item_history_top_text"
				android:layout_toRightOf="@+id/item_history_btn_favorite"
				android:textSize="14sp"
				android:textStyle="italic" />

		</RelativeLayout>

	</android.support.v7.widget.CardView>

</LinearLayout>
